{
  "name": "polynews-worker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create polynews-cache",
    "db:migrate": "wrangler d1 execute polynews-cache --local --file=./migrations/001_init.sql",
    "db:migrate:remote": "wrangler d1 execute polynews-cache --remote --file=./migrations/001_init.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.56.0"
  },
  "dependencies": {
    "@google/genai": "^1.34.0"
  }
}
